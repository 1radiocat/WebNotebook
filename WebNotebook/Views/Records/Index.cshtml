@model WebNotebook.Models.RecordCompanyViewModel

@{
    ViewData["Title"] = "Управление контактами";
}

<h4>Управление контактами</h4>

<p>
    <a asp-action="Create">Создать новый контакт</a>
</p>
@* Форма поиска контакта *@
<form asp-controller="Records" asp-action="Index" method="get">
    <p>
        Имя контакта: <input type="text" placeholder="Содержит текст..." name="SearchString">
        
        Компания:
        <select asp-for="RecordCompany" asp-items="Model.Companies">
            <option value="">Все</option>
        </select>

        <input type="submit" value="Фильтровать" />
    </p>
</form>
@* Таблица контактов *@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Records[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Records[0].Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Records[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Records[0].BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Records[0].Company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Records[0].Comment)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Records)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Company)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comment)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Редактировать</a><br />
                    <a asp-action="Details" asp-route-id="@item.Id">Подробно</a><br />
                    <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<button onclick="window.location.href = '/';" class="btn btn-primary">Вернуться на главную страницу</button>